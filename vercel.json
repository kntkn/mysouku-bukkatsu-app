{
  "builds": [
    {
      "src": "app_lite.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app_lite.py"
    }
  ],
  "functions": {
    "app_lite.py": {
      "maxDuration": 300
    }
  },
  "env": {
    "PYTHONPATH": "/var/task",
    "STREAMLIT_SERVER_HEADLESS": "true",
    "STREAMLIT_SERVER_ENABLE_CORS": "false",
    "STREAMLIT_BROWSER_GATHER_USAGE_STATS": "false"
  }
}